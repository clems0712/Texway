    <ImageView
        android:id="@+id/image_bad_product"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:gravity = "start"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_toLeftOf="@id/arrow"
        android:contentDescription="icon"
        android:src="@drawable/clothes_default"
        />
    <!-- barcode -->
    <TextView
        android:id="@+id/name_bad_product"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_bad_product"
        android:layout_alignStart="@+id/image_bad_product"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/arrow"
        android:layout_centerHorizontal="true"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="icon"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_suggest_arrow_right"
        android:tint="@android:color/white" />

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/image_good_product"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:gravity = "end"
        android:layout_toRightOf="@id/arrow"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:contentDescription="icon"
        android:src="@drawable/clothes_default"
        />

    <TextView
        android:id="@+id/name_good_product"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_good_product"
        android:layout_alignStart="@+id/image_good_product"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:gravity="center"
        android:textStyle="bold" />



</RelativeLayout>